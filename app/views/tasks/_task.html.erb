<div class="panel panel-info">
  <div class="panel-heading">
  	<%= link_to 'created ' + time_ago_in_words(task.created_at) + ' ago', edit_task_path(task) %>
	<%= link_to '<i class="fa fa-times"></i>'.html_safe, task, class: 'pull-right', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  
  <div class="panel-body">
  	<%= raw(task.content_html) %>
  </div>
  
  <div class="panel-footer text-center">

	<% if task.state == "To Do" %>
		<td><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_state_task_path(task, state: "Doing"),  method: :put %></td>
	<% elsif task.state == "Doing" %>
		<td><%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_state_task_path(task, state: "To Do"),  method: :put %></td>
		<td><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, change_state_task_path(task, state: "Done"),  method: :put %></td>
	<% elsif task.state == "Done" %>
		<td><%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, change_state_task_path(task, state: "Doing"),  method: :put %></td>
	<% end %>

  </div>
</div>


